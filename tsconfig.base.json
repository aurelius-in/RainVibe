{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2021", "DOM"],
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@rainvibe/common": ["packages/common/src"],
      "@rainvibe/editor": ["packages/editor/src"],
      "@rainvibe/ai": ["packages/ai/src"],
      "@rainvibe/audit": ["packages/audit/src"],
      "@rainvibe/policy": ["packages/policy/src"],
      "@rainvibe/indexer": ["packages/indexer/src"]
    }
  },
  "exclude": ["node_modules", "dist", "build", "out"]
}

