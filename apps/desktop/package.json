{
  "name": "@rainvibe/desktop",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/main/electron/main.js",
  "description": "RainVibe Desktop (Electron + React + Tailwind + Vite)",
  "scripts": {
    "dev": "rimraf dist && run-p dev:renderer dev:main:watch dev:electron",
    "dev:renderer": "vite --config vite.renderer.config.ts",
    "dev:main:watch": "tsc -p tsconfig.main.json --watch",
    "dev:electron": "cross-env VITE_DEV_SERVER_URL=http://127.0.0.1:5173 wait-on tcp:5173 && electron .",
    "build": "rimraf dist && run-s build:renderer build:main",
    "build:renderer": "vite build --config vite.renderer.config.ts",
    "build:main": "tsc -p tsconfig.main.json",
    "package": "electron-builder --config electron-builder.yml"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "@monaco-editor/react": "^4.6.0",
    "monaco-editor": "^0.52.0"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.19",
    "electron": "^31.3.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.39",
    "rimraf": "^5.0.7",
    "run-script-os": "^1.1.6",
    "npm-run-all": "^4.1.5",
    "wait-on": "^7.2.0",
    "cross-env": "^7.0.3",
    "tailwindcss": "^3.4.9",
    "typescript": "^5.5.4",
    "vite": "^5.4.1",
    "vite-node": "^1.6.0",
    "@vitejs/plugin-react": "^4.3.1",
    "vite-tsconfig-paths": "^4.3.2"
  }
}

